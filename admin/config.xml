<?xml version="1.0" encoding="utf-8"?>
<config>
	<params>
		<param name="orderby" type="list" default="" label="Primary Order" description="Order that the items will be displayed in.">
			<option value="">Default</option>
			<option value="date">Most recent first</option>
			<option value="price">Price</option>
			<option value="livingspace">Living space</option>
			<option value="landspace">Land space</option>
			<option value="hits">Hits</option>
			<option value="order">Ordering</option>
		</param>
		
		<param name="sort_date" type="radio" default="0" label="Sort by date" description="PARAMSLISTSSORTDATE" >
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		
		<param name="sort_price" type="radio" default="0" label="Sort by price" description="PARAMSLISTSSORTPRICE" >
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		
		<param name="sort_livingspace" type="radio" default="0" label="Sort by living space" description="PARAMSLISTSSORTLIVINGSPACE" >
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		
		<param name="sort_landspace" type="radio" default="0" label="Sort by land space" description="PARAMSLISTSSORTLANDSPACE" >
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		
		<param name="sort_hits" type="radio" default="0" label="Sort by popularity" description="PARAMSLISTSSORTPOPULARITY" >
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		
		<param name="list_limit" type="text" size="3" default="10" label="List limit" description="PARAMSLISTLIMIT"  />	
	</params>
</config>